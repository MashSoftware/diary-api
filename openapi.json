    "components": {
        "schemas": {
            "UserRequest": {
                "required": [
                    "email_address",
                    "password",
                    "first_name",
                    "last_name"
                ],
                "properties": {
                    "email_address": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "children": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                }
            },
            "UserResponse": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "email_address": {
                        "type": "string",
                        "format": "email"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "children": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    "activated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "login_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                }
            },
            "ProfileRequest": {
                "required": [
                    "first_name",
                    "last_name",
                    "email_address"
                ],
                "properties": {
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "email_address": {
                        "type": "string",
                        "format": "email"
                    }
                }
            },
            "PasswordRequest": {
                "required": [
                    "current_password",
                    "new_password"
                ],
                "properties": {
                    "current_password": {
                        "type": "string",
                        "format": "password"
                    },
                    "new_password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "LoginRequest": {
                "required": [
                    "email_address",
                    "password"
                ],
                "properties": {
                    "email_address": {
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "type": "string",
                        "format": "password"
                    }
                }
            },
            "ChildRequest": {
                "required": [
                    "first_name",
                    "last_name",
                    "date_of_birth"
                ],
                "properties": {
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "format": "date"
                    },
                    "users": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                }
            },
            "ChildResponse": {
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "date_of_birth": {
                        "type": "string",
                        "format": "date"
                    },
                    "users": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                }
            },
            "EventRequest": {
                "required": [
                    "child_id",
                    "user_id",
                    "started_at",
                    "type"
                ],
                "properties": {
                    "user_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "child_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "sleep",
                            "feed",
                            "change"
                        ]
                    },
                    "feed_type": {
                        "type": "string",
                        "enum": [
                            "breast",
                            "bottle",
                            "formula"
                        ]
                    },
                    "change_type": {
                        "type": "string",
                        "enum": [
                            "wet",
                            "soiled",
                            "dry"
                        ]
                    },
